div.quicksearch_open,div.quicksearch_closed
{
	position:absolute;
	color:white;
  padding: 0px;
  width: 400px;
  background: none;
  display: block;
  float:right;
  z-index:30;
  height: auto;
  border:none;
}

div.quicksearch_closed{
	width:auto;
	margin-left:0px;
}

div.quicksearch_open{
}

div.quicksearch_open img ,div.quicksearch_closed img {
	position:absolute;
	top:11px;
	right:18px;z-index:20;
	width:400px;
}

div.quicksearch_open form input,
div.quicksearch_open form select,
div.quicksearch_closed form input,
div.quicksearch_closed form select{
	display:block;
}

div.quicksearch_open a.open_close:link ,
div.quicksearch_open a.open_close:visited ,
div.quicksearch_closed a.open_close:link ,
div.quicksearch_closed a.open_close:visited {
	font-size:9px;
	color:white;
}

div.quicksearch_open form input.name, 
div.quicksearch_closed form input.name {
	border: none;
	font-size: 13px;
	height:20px;
	width: auto;
	margin-bottom:10px;
	display:block;
}

div.quicksearch_open form select.drop, 
div.quicksearch_open form select.dropmulti {
	display:block;
  border: none;
  font-size: 13px;
  width: 200px;
  margin-bottom:10px;
}

div.quicksearch_open form table td,div.quicksearch_closed form table td {
  text-align:right;
  vertical-align:middle;
}

div.quicksearch_closed form select.dropclear  {
  border: none;
  font-size: 13px;
  width: 120px;
  text-align:right;
  margin-bottom:10px;
  background:white;
  display:block;
}

div.quicksearch_open form table td.dropmulti {
	text-align:center;
}

div.quicksearch_open form select.dropmulti {
	height:auto;
	width:auto;
}

div.quicksearch_open form {
	display:block;
	border:none;
	margin:0px;
	margin-top:-10px;
	padding-left:20px;
}

div.quicksearch_closed form {
	display:block;
	border:none;
	margin:0px;
	margin-top:6px;
}	

input.short_submit {
  display:block;
  width:60px;
  margin-bottom:10px;
}

input.search_submit {
  display:block;
  width:110px;
  margin-bottom:10px;
}

div#advanceSearch .field {
  margin-bottom: 0.5em;
}

div#advanceSearch label {
  font-weight: bold;
}

div#advanceSearch #fieldset_ministry, div#advanceSearch #fieldset_region {
  width: 46%;
  margin-bottom: 1em;
}

div#advanceSearch fieldset label {
  font-weight: normal;
}

div#advanceSearch legend {
  font-size: 1.3em;
}

fieldset#fieldset_ministry {
  float: left;
}

fieldset#fieldset_region {
  float: right;
}

div#advanceSearch input[type=submit] {
  display: block;
  clear: both;
}